.main_chat__header
  .main_chat__header__left
    .main_chat__header__left__group_name
      = message.group.name
    .main_chat__header__left__menbers
      = message.user.name
  .main_chat__header__right
    = link_to 'Edit', edit_group_path(@group.id), class: "main_chat__header__right__edit"
.main_chat__contents
  .main_chat__contents__nickname
    = message.user.name
    .main_chat__contents__nickname--today
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main_chat__contents__coment
    = message.message
